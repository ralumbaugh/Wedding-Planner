@{
    ViewData["Title"] = "New Wedding";
}
@model WeddingWrapper

<div class="container text-center">
    <div class="row justify-content-between">
        <h1>Plan Your Wedding</h1>
        <h3><a href ="/dashboard">Dashboard</a>     <a href="/Logout">Log Out</a></h3>
    </div>
    <form asp-action="CreateWedding" asp-controller="Home" method="post">
        <span class="text-danger" asp-validation-for="ThisWedding.WedderOne"></span>
        <div class="form-group">
            <label asp-for="ThisWedding.WedderOne">Wedder One: </label>
            <input asp-for="ThisWedding.WedderOne">
        </div>
        <span class="text-danger" asp-validation-for="ThisWedding.WedderTwo"></span>
        <div class="form-group">
            <label asp-for="ThisWedding.WedderTwo">Wedder Two: </label>
            <input asp-for="ThisWedding.WedderTwo">
        </div>
        <span class="text-danger" asp-validation-for="ThisWedding.Date"></span>
        <div class="form-group">
            <label asp-for="ThisWedding.Date">Date: </label>
            <input asp-for="ThisWedding.Date">
        </div>
        <span class="text-danger" asp-validation-for="ThisWedding.Address"></span>
        <div class="form-group">
            <label asp-for="ThisWedding.Address">Wedding Address: </label>
            <input asp-for="ThisWedding.Address">
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>